{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Current File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "useBundler": true
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Rails Server",
            "program": "${workspaceFolder}/bin/rails",
            "args": [
                "server"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true,
            "env": {
                "RAILS_ENV": "development"
            }
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Run RSpec - Current File",
            "program": "${workspaceFolder}/bin/rspec",
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true
        },
        {
            "type": "ruby",
            "request": "attach",
            "name": "Attach to Remote",
            "remoteHost": "localhost",
            "remotePort": 12345
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Current File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "useBundler": true
        },
        {
            "type": "ruby",
            "request": "attach",
            "name": "Attach to Remote Debug Session",
            "remoteHost": "localhost",
            "remotePort": 12345
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Rails Server",
            "program": "rails",
            "args": [
                "server"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true,
            "disableSpring": true,
            "env": {
                "RAILS_ENV": "development",
                "DISABLE_SPRING": "1"
            }
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Rails Console",
            "program": "rails",
            "args": [
                "console"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true,
            "useTerminal": true,
            "disableSpring": true,
            "env": {
                "DISABLE_SPRING": "1"
            }
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Rake Task",
            "program": "rake",
            "args": [
                "${input:rakeTask}"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true,
            "disableSpring": true,
            "env": {
                "DISABLE_SPRING": "1"
            }
        },
        {
            "type": "ruby",
            "request": "launch",
            "name": "Debug Rails Job",
            "program": "rails",
            "args": [
                "runner",
                "${input:jobClass}.perform_now"
            ],
            "cwd": "${workspaceFolder}",
            "useBundler": true,
            "disableSpring": true,
            "env": {
                "RAILS_ENV": "development",
                "DISABLE_SPRING": "1"
            }
        }
    ]
}